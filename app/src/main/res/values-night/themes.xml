        <item name="android:windowBackground">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_8C706D</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>



    <style name="NavColor" parent="ThemeOverlay.AppCompat">
        <item name="android:background">#131337</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>
</resources>