<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UsersWordsFragment">


    <Button
        android:id="@+id/addwords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        android:text="Добавить слова"
        app:layout_constraintBottom_toTopOf="@+id/viewingwords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewingwords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:text="Посмотреть слова"
        app:layout_constraintBottom_toTopOf="@+id/shoosewords"
        app:layout_constraintEnd_toEndOf="@+id/addwords"
        app:layout_constraintStart_toStartOf="@+id/addwords"
        app:layout_constraintTop_toBottomOf="@+id/addwords" />

    <Button
        android:id="@+id/shoosewords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:text="Тренировка с выбором"
        app:layout_constraintBottom_toTopOf="@+id/writingwords"
        app:layout_constraintEnd_toEndOf="@+id/viewingwords"
        app:layout_constraintStart_toStartOf="@+id/viewingwords"
        app:layout_constraintTop_toBottomOf="@+id/viewingwords" />

    <Button
        android:id="@+id/writingwords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="300dp"
        android:text="Письменная тренировка"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shoosewords"
        app:layout_constraintStart_toStartOf="@+id/shoosewords"
        app:layout_constraintTop_toBottomOf="@+id/shoosewords" />
</androidx.constraintlayout.widget.ConstraintLayout>