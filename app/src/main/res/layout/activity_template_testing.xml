<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplateTesting">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ENG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="1dp"
        android:clickable="false"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/Rus1"
        app:layout_constraintEnd_toEndOf="@+id/Rus1"
        app:layout_constraintStart_toStartOf="@+id/Rus1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Rus1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/Rus3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ENG" />

    <Button
        android:id="@+id/Rus2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/Rus4"
        app:layout_constraintEnd_toEndOf="@+id/Rus3"
        app:layout_constraintStart_toStartOf="@+id/Rus3"
        app:layout_constraintTop_toBottomOf="@+id/Rus3" />

    <Button
        android:id="@+id/Rus3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/Rus2"
        app:layout_constraintEnd_toEndOf="@+id/Rus1"
        app:layout_constraintStart_toStartOf="@+id/Rus1"
        app:layout_constraintTop_toBottomOf="@+id/Rus1" />

    <Button
        android:id="@+id/Rus4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="200dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Rus2"
        app:layout_constraintStart_toStartOf="@+id/Rus2"
        app:layout_constraintTop_toBottomOf="@+id/Rus2" />

    <Chronometer
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>