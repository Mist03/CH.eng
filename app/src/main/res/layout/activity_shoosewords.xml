<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonBack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/eng1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="1dp"
        android:clickable="false"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/rus1"
        app:layout_constraintEnd_toEndOf="@+id/rus1"
        app:layout_constraintStart_toStartOf="@+id/rus1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rus1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/rus3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eng1" />

    <Button
        android:id="@+id/rus2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/rus4"
        app:layout_constraintEnd_toEndOf="@+id/rus3"
        app:layout_constraintStart_toStartOf="@+id/rus3"
        app:layout_constraintTop_toBottomOf="@+id/rus3" />

    <Button
        android:id="@+id/rus3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/rus2"
        app:layout_constraintEnd_toEndOf="@+id/rus1"
        app:layout_constraintStart_toStartOf="@+id/rus1"
        app:layout_constraintTop_toBottomOf="@+id/rus1" />

    <Button
        android:id="@+id/rus4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="200dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rus2"
        app:layout_constraintStart_toStartOf="@+id/rus2"
        app:layout_constraintTop_toBottomOf="@+id/rus2" />
</androidx.constraintlayout.widget.ConstraintLayout>